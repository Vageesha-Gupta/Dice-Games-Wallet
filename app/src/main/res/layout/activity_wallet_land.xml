<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/colorBackground">

    <!-- App Header -->
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="DiceGames"-->
<!--        android:textSize="24sp"-->
<!--        android:textStyle="bold"-->
<!--        android:textColor="@color/colorPrimary" />-->

    <!-- Info and Instructions -->
    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the die to roll.\nYou earn 5 coins every time you roll a six!"
        android:textAlignment="center"
        android:layout_marginTop="16dp" />

    <!-- Coins Display -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txt_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />
    </LinearLayout>

    <!-- Die Button -->
    <Button
        android:id="@+id/btn_die"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@color/purple_500"
        android:text="6"
        android:textSize="72sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="32dp" />

    <!-- Sixes Rolled & Total Rolls (Initially hidden) -->
    <LinearLayout
        android:id="@+id/layout_rolls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sixes Rolled"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txt_sixes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Dice Rolls"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txt_total_rolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <!-- Double Sixes (Initially hidden) -->
    <LinearLayout
        android:id="@+id/layout_double_sixes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Double Sixes"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txt_double_sixes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <!-- Previous Roll -->
    <TextView
        android:id="@+id/txt_previous_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Roll: 0"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

</LinearLayout>